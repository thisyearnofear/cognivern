{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "outDir": "../../dist",
        "rootDir": "..",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "types": [
            "node"
        ],
        "baseUrl": "..",
        "paths": {
            "@recallnet/sdk": [
                "node_modules/@recallnet/sdk"
            ],
            "@recallnet/sdk/*": [
                "node_modules/@recallnet/sdk/*"
            ],
            "@recallnet/chains": [
                "node_modules/@recallnet/chains"
            ],
            "@recallnet/chains/*": [
                "node_modules/@recallnet/chains/*"
            ]
        }
    },
    "include": [
        "../**/*.ts",
        "../**/*.js",
        "../node_modules/@recallnet/*/dist/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "../node_modules/**/node_modules"
    ]
}