{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "outDir": "../../dist",
        "rootDir": "../",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "types": [
            "node"
        ],
        "baseUrl": "..",
        "paths": {
            "@/*": [
                "*"
            ],
            "@recallnet/*": [
                "../node_modules/@recallnet/*"
            ]
        },
        "sourceMap": true,
        "declaration": true,
        "checkJs": true,
        "noEmit": false,
        "isolatedModules": true
    },
    "include": [
        "../escheat/**/*",
        "../services/**/*",
        "../types/**/*"
    ],
    "exclude": [
        "../frontend/**/*",
        "node_modules",
        "dist",
        "**/*.test.ts"
    ],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}