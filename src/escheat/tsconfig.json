{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "../../dist/escheat",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "*"
            ]
        }
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}