{
  "name": "escheat-agents",
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "pnpm run clean && pnpm run build:backend && pnpm run copy-config && pnpm run build:frontend",
    "build:backend": "tsc",
    "build:frontend": "cd src/frontend && pnpm install && pnpm build",
    "copy-config": "mkdir -p dist/config && cp -r src/config/* dist/config/",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "clean": "rm -rf dist",
    "frontend": "cd src/frontend && pnpm dev",
    "frontend:build": "cd src/frontend && pnpm build",
    "deploy": "pnpm run build && pnpm run start",
    "upload-policy": "tsx scripts/upload-test-policy.ts"
  },
  "dependencies": {
    "@google/genai": "^0.8.0",
    "@recallnet/chains": "^0.0.8",
    "@recallnet/sdk": "^0.0.9",
    "@types/event-source-polyfill": "^1.0.5",
    "axios": "^1.8.4",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ethers": "^6.11.1",
    "event-source-polyfill": "^1.0.31",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "openai": "^4.93.0",
    "socket.io": "^4.8.1",
    "viem": "^2.26.3",
    "winston": "^3.11.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.30",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.4.2"
  }
}
