{
  "name": "cognivern",
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "lint": "eslint --config ./config/eslint.config.mjs src/frontend",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "pnpm run build:clean && pnpm run build:backend",
    "build:clean": "rm -rf dist && mkdir -p dist",
    "build:backend": "tsc --project tsconfig.json",
    "build:shared": "tsc --project tsconfig.shared.json",
    "build:modules": "tsc --project tsconfig.modules.json",
    "build:api": "tsc --project tsconfig.api.json",
    "build:agents": "tsc --project tsconfig.agents.json",
    "build:frontend": "cd src/frontend && pnpm install && pnpm build",
    "copy-config": "mkdir -p dist/config && cp -r config/* dist/config/",
    "start": "node dist/index.js",
    "start:api": "node dist/modules/api/index.js",
    "start:agents": "node dist/modules/agents/index.js",
    "start:server": "./scripts/start-server.sh",
    "deploy": "./scripts/deploy.sh",
    "dev:local": "./scripts/local-dev.sh",
    "start-agent": "tsx scripts/startFirstAgent.ts",
    "competition": "tsx scripts/competitionAgent.ts",
    "mcp-competition": "tsx scripts/mcpCompetitionAgent.ts",
    "auto-competition": "tsx scripts/autoCompetitionAgent.ts",
    "dev": "tsx watch src/index.ts",
    "dev:api": "tsx watch src/modules/api/index.ts",
    "dev:agents": "tsx watch src/modules/agents/index.ts",
    "clean": "rm -rf dist",
    "clean:all": "rm -rf dist node_modules src/frontend/dist src/frontend/node_modules",
    "frontend": "cd src/frontend && pnpm dev",
    "frontend:build": "cd src/frontend && pnpm build",
    "deploy": "pnpm run build && pnpm run start",
    "deploy:hetzner": "./deploy/deploy.sh",
    "deploy:monitor": "./deploy/monitor.sh",
    "monitor": "chmod +x scripts/monitoring/monitor-api.sh && ./scripts/monitoring/monitor-api.sh",
    "docker:build": "docker-compose -f docker-compose.production.yml build --no-cache",
    "docker:up": "docker-compose -f docker-compose.production.yml up -d",
    "docker:down": "docker-compose -f docker-compose.production.yml down",
    "docker:logs": "docker-compose -f docker-compose.production.yml logs -f",
    "migrate": "chmod +x migrate-to-production.sh && ./migrate-to-production.sh",
    "deploy-contracts": "npx hardhat run scripts/deploy-hardhat.cjs --network calibration",
    "upload-policy": "tsx scripts/upload-test-policy.ts",
    "clean:build": "rm -rf build/artifacts/* build/cache/*"
  },
  "dependencies": {
    "@ensdomains/buffer": "^0.1.1",
    "@glif/filecoin-address": "^2.0.8",
    "@recallnet/chains": "^0.0.12",
    "@recallnet/sdk": "^0.0.14",
    "@vercel/node": "^3.0.0",
    "@zondax/filecoin-signing-tools": "^0.20.0",
    "axios": "^1.8.4",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "ethers": "^6.11.1",
    "event-source-polyfill": "^1.0.31",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "openai": "^4.93.0",
    "socket.io": "^4.8.1",
    "solidity-cborutils": "^2.0.0",
    "viem": "^2.26.3",
    "winston": "^3.11.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@nomicfoundation/hardhat-toolbox": "^6.0.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "hardhat": "^2.25.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.4.2"
  }
}
