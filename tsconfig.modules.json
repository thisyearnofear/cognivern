{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true
  },
  "include": [
    "src/modules/**/*",
    "src/services/**/*",
    "src/controllers/**/*",
    "src/middleware/**/*",
    "src/routes/**/*",
    "src/utils/**/*",
    "src/types/**/*",
    "src/config.ts",
    "src/server.ts",
    "src/index.ts"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/frontend/**/*",
    "src/shared/**/*"
  ],
  "references": [
    { "path": "./tsconfig.shared.json" }
  ]
}
